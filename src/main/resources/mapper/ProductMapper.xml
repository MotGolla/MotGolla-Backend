<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="motgolla.domain.product.mapper.ProductMapper">

    <select id="findAllForRecommend" resultType="motgolla.domain.product.vo.Product">
        SELECT
        ID,
        NAME,
        BRAND_ID AS brandId,
        PRICE,
        COLOR,
        DESCRIPTION,
        CATEGORY,
        STYLE,
        FIT,
        SEASON,
        IMAGE_URL AS imageUrl
        FROM PRODUCT
    </select>

</mapper>
